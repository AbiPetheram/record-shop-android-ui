<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <stroke
                android:width="2.3dp"
                android:color="#a3eb0e" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_selected="false" tools:ignore="StateListReachable">
        <shape>
            <gradient
                android:startColor="#F2F2F2"
                android:centerColor="#FFFFFF"
                android:endColor="#FFFFFF"
                android:angle="270"
                />
            <stroke
                android:width="0.7dp"
                android:color="#BDBDBD" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <padding
                android:top="3dp"
                android:bottom="3dp" />
        </shape>
    </item>
</selector>